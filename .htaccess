RewriteEngine On
RewriteBase /billiard-bar/

# Prevent directory browsing
Options -Indexes

# Protect config and database files
<FilesMatch "^(config\.php|database\.sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Default document
DirectoryIndex index.html index.php

# Error pages
ErrorDocument 404 /billiard-bar/index.html
ErrorDocument 403 /billiard-bar/index.html
